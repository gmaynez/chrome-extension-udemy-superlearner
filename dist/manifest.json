{
	"name": "Udemy Superlearner",
	"version": "2.0.0",
	"description": "Master your learning pace with granular video speed controls on Udemy. Find the perfect tempo for any instructor.",
	"manifest_version": 3,
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": ["storage"],
	"host_permissions": ["https://*.udemy.com/*"],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "Udemy Superlearner"
	},
	"content_scripts": [
		{
			"matches": ["https://*.udemy.com/*"],
			"js": ["content/playbackRate.js"],
			"css": ["content/styles.css"]
		}
	]
}
